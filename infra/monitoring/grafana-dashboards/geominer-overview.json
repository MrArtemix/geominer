{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Ge O'Miner Platform Overview - SLA Monitoring",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "SLA - Disponibilite Plateforme",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "avg(up{job=~\"api-gateway|minespotai-svc|alertflow-svc\"}) * 100",
          "legendFormat": "Disponibilite %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 99 },
              { "color": "green", "value": 99.9 }
            ]
          },
          "min": 95,
          "max": 100,
          "unit": "percent"
        }
      }
    },
    {
      "title": "Temps de Reponse API Gateway (p95)",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"api-gateway\"}[5m])) by (le))",
          "legendFormat": "p95 latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "title": "Temps Analyse MineSpot AI (p95)",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"minespotai-svc\", handler=~\"/infer.*\"}[5m])) by (le))",
          "legendFormat": "p95 inference"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "title": "Alertes Actives",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "geominer_active_alerts_total",
          "legendFormat": "Alertes actives"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "title": "Requetes par Seconde (API Gateway)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api-gateway\"}[5m])) by (method)",
          "legendFormat": "{{ method }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "title": "Taux d'Erreur par Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (job) / sum(rate(http_requests_total[5m])) by (job) * 100",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    },
    {
      "title": "CPU Usage par Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"geominer\"}[5m])) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit" }
      }
    },
    {
      "title": "Memoire par Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"geominer\"}) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "title": "PostgreSQL - Connexions Actives",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=\"geominerdb\"}",
          "legendFormat": "{{ state }}"
        }
      ]
    },
    {
      "title": "Redis - Memoire Utilisee",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 22 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "Memoire utilisee"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "title": "MinIO - Stockage Utilise",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 22 },
      "targets": [
        {
          "expr": "minio_cluster_usage_total_bytes",
          "legendFormat": "Stockage total"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    }
  ],
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["geominer", "overview", "sla"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
